@model SERVERAPI.ViewModels.AddAnimalsViewModel
@using Agri.Models
@{
    ViewData["title"] = "Animal Information";
}
<style>
    .NextButton {
        border: 0px !important
    }
</style>

<!-- modal placeholder-->
<div id='myModal' class='modal'>
    <div class="modal-dialog" id="divSize">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<!-- BODY CONTENT -->

<div class="header-height"></div>

<br />
<br />
<div class="container">
    <div class="step-forms col-sm-12">
        <form asp-controller="Animals" asp-action="AddAnimals" method="post" id="animalForm">
            <div class="form-box">
                <div class="form-box-header clearfix">
                    <legend class="form-box-heading">Add Animals</legend>
                </div>

                <div class="form-box-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-box-fields">
                        <div class="row">
                            <div class="form-group col-sm-3" style="display:none">
                                <label for="ddlAnimalType">Animal Type</label>
                                <select class="form-control" asp-for="selAnimalTypeOption" asp-items="@(new SelectList(Model.animalTypeOptions,"Id","Value"))" id="ddlAnimalType">
                                    <option>select animal</option>
                                </select>
                                <span asp-validation-for="selAnimalTypeOption" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4">
                                <label for="ddlSubType">Sub Type</label>
                                <select class="form-control" asp-for="selSubTypeOption" asp-items="@(new SelectList(Model.subTypeOptions,"Id","Value"))" id="ddlSubType"></select>
                                <span asp-validation-for="selSubTypeOption" class="text-danger">Select a Subtype</span>
                            </div>
                            <div class="form-group col-sm-4">
                                <label for="averageAnimalNumber">Average Animal Number on Farm</label>
                                <input class="form-control" asp-for="averageAnimalNumber" id="averageAnimalNumber" type="text" placeholder="@Model.placehldr" />
                                <span asp-validation-for="averageAnimalNumber"></span>
                            </div>
                            <div class="form-group col-sm-2" style="display:none">
                                <label for="ddlManureMaterialType">Manure Type</label>
                                <select class="form-control" asp-for="selManureMaterialTypeOption" asp-items="@(Html.GetEnumSelectList<ManureMaterialType>())" id="ddlManureMaterialType">
                                    <option>select type</option>
                                </select>
                                <span asp-validation-for="selManureMaterialTypeOption" class="text-danger">Select a Manure Material Type</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12" style="border-top: #E5E5E5 1px solid; padding-top: 10px;">
                                <label for="isManureCollected">As a beef farmer,do you pile or collect manure from your animals?</label>
                                <div class="form-group" role="radiogroup" aria-labelledby="labelisManureCollected">
                                    <label style="padding-right: 20px">
                                        <input asp-for="isManureCollected" type="radio" value="true" id="rbIsManureCollectedYes" onchange="IsManureCollectedChanged()" /> Yes
                                    </label>
                                    <label>
                                        <input asp-for="isManureCollected" type="radio" value="false" id="rbIsManureCollectedNo" onchange="IsManureCollectedChanged()" /> No
                                    </label>
                                </div>
                            </div>
                        </div>
                        @if (Model.showDurationDays)
                        {
                            <div class="row">
                                <div class="form-group col-sm-1">
                                    <label for="txtDuration">Duration</label>
                                </div>
                                <div class="form-group col-sm-2">
                                    <input class="form-control" asp-for="durationDays" id="durationDays" type="text" />
                                </div>
                                <div class="form-group col-sm-3">
                                    days
                                </div>
                            </div>
                        }
                        <div class="row">
                            <div class="form-group col-sm-10">
                                &nbsp;
                            </div>
                            <div class="form-box-fields text-right col-sm-1">
                                <button class="btn" onclick="">Cancel</button>
                            </div>
                            <div class="form-box-fields text-right col-sm-1">
                                <button class="btn btn-success" type="submit" title="Save" onclick="">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @Html.HiddenFor(x => x.buttonPressed)
            @Html.HiddenFor(x => x.showDurationDays)
        </form>
    </div>

    <!-- PAGE CONTENT -->
</div>

