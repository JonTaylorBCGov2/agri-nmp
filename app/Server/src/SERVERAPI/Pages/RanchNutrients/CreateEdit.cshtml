@page "{handler?}/{ismodal:bool}"
@model SERVERAPI.Pages.RanchNutrients.CreateEdit
@{
    ViewData["HeaderTitle"] = "CreateEdit";
    Layout = "_ModalLayout";
}

@if (Model.IsModal)
{
    <form asp-page="CreateEdit" asp-route-ismodal="true" method="post" class="form-box-body">
        @await Html.PartialAsync("_createEditFormPartial", Model, new ViewDataDictionary(ViewData))
    </form>
}
else
{
    <form method="post" class="form-box-body">
        @await Html.PartialAsync("_createEditFormPartial", Model, new ViewDataDictionary(ViewData))
    </form>
}

