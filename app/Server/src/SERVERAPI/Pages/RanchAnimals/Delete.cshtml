@page "{id:int}"
@model SERVERAPI.Pages.RanchAnimals.Delete
@{
    Layout = null;
}

<div class="modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document" id="divSize">
        <div class="modal-content">
            @* This puts the header as the bar on the Modal *@
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h2 class="modal-title" id="myModalLabel">Delete Animal</h2>
            </div>
            <div class="modal-body" role="dialog">
                <form asp-page="Delete" method="post" class="form-box-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div>
                            @Model.Data.CattleSubTypeName<br />
                        </div>
                    </div>
                    <br />
                    <div class="modal-footer">
                        <button class="btn" type="button" data-dismiss="modal">Cancel</button>
                        <input class="btn btn-primary" type="submit" value="Delete" data-save="razor-page-modal" />
                    </div>
                    @Html.HiddenFor(x => x.Data.Id)
                    @Html.HiddenFor(x => x.Data.CattleSubTypeId)
                </form>
            </div>
        </div>
    </div>
</div>