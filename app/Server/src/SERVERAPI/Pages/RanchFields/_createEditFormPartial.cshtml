@model SERVERAPI.Pages.RanchFields.CreateEdit

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group col-sm-6">
    <label asp-for="@Model.Data.FieldName">Field Name</label>
    <div>
        <input type="text" asp-for="@Model.Data.FieldName" class="form-control col-sm-12" />
        <span asp-validation-for="@Model.Data.FieldName"></span>
    </div>
</div>
<div class="form-group col-sm-6">
    <label asp-for="@Model.Data.FieldComment">Comments(Optionals)</label>
    <div>
        <textarea asp-for="@Model.Data.FieldComment" style="resize:none" placeholder="@Model.Data.Placehldr" class="form-control col-sm-12"></textarea>
        <span asp-validation-for="@Model.Data.FieldComment"></span>
    </div>
</div>
<br />
<div class="form-group col-sm-12">
    <label asp-for="@Model.Data.FieldArea">Area</label></br>
    <div class="col-sm-6" style="padding-left:0px !important;">
        <input type="text" asp-for="@Model.Data.FieldArea" class="form-control col-sm-10" />
        <span asp-validation-for="@Model.Data.FieldArea"></span>
    </div>
    <div class="col-sm-1" style="padding-top:5px;padding-left:0px;">&nbsp;Acres&nbsp;</div>
</div>
</br>
<div class="form-group col-sm-6">
    <label asp-for="@Model.Data.SelectPrevYrManureOption">Manure application in previous years</label>
    <select class="form-control col-sm-12" asp-for="@Model.Data.SelectPrevYrManureOption" asp-items="@(new SelectList(Model.Data.SelectPrevYrManureOptions,"FieldManureApplicationHistory","Name"))">
        <option>select</option>
    </select>
    <span asp-validation-for="@Model.Data.SelectPrevYrManureOption"></span>
</div>
<div class="form-group col-sm-6" style="margin-width: 350px;">
    <label style="padding-right: 20px; padding-top:5px;">
        <input id="isSeasonal" asp-for="@Model.Data.IsSeasonalFeedingArea" onchange="IsSeasonalValueChange()" type="checkbox" />
    </label>
    <label i="labelIsSeasonalFeedingArea">This is a seasonal feeding area</label>
</div>
<br />
@{
    var displaySeasonal = "none";
}
@if (Model.Data.IsSeasonalFeedingArea)
{
    displaySeasonal = "inline";
}
<div class="col-sm-12"><hr /></div>
<div class="form-group col-sm-12" id="FeedingValue" style="display:@displaySeasonal">
    <label class="form-box-heading">Feeding Area</label><!--Need to pass from model-->
    <div class="col-sm-12" style="padding-left:0px !important;">
        <label asp-for="@Model.Data.FeedingValueDays" class="col-sm-4" style="padding-left:0px !important;">Time Spent in Feeding Area</label>
        <div class="col-sm-3">
            <input type="text" asp-for="@Model.Data.FeedingValueDays" class="form-control" />
        </div>
        <div class="col-sm-5" style="padding-top:5px;padding-left:0px;">&nbsp;days&nbsp;</div><!--Need to add validation-->
    </div>
    <div class="col-sm-12" style="padding-left:0px !important;">
        <label asp-for="@Model.Data.FeedingPercentage" class="col-sm-4" style="padding-left:0px !important;">Percent of time spent outside of feeding area</label>
        <div class="col-sm-3">
            <input type="text" asp-for="@Model.Data.FeedingPercentage" class="form-control" />
        </div>
        <div class="col-sm-5" style="padding-top:5px;padding-left:0px;">&nbsp;%&nbsp;</div><!--Need to add validation-->
    </div>
</div>
<div class="form-group col-sm-12" id="MatureValue" style="display:@displaySeasonal">
    <label class="form-box-heading">Mature Animals</label>
    <div class="col-sm-12" style="padding-left:0px !important;">
        <label asp-for="@Model.Data.MatureAnimalCount" class="col-sm-3" style="padding-left:0px !important;">Number of mature animals</label>
        <label asp-for="@Model.Data.MatureAnimalAverage" class="col-sm-4">Average weight</label>        
        <label asp-for="@Model.Data.SelectMatureAnimalDailyFeed" class="col-sm-5">            
                Daily feed requirement           
            
                <a href="#" data-toggle="tooltip" title="@Model.Data.DailyFeedWarning" id="toolTipDailyFeedWarning">
                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true" title="Daily Feed Requirement" style="font-size:20px; padding-top:5px"></span>
                </a>
            
            @*<span class="text-danger">@Html.Raw(@Model.Data.DailyFeedWarning)</span>*@
        </label>
    </div>
    <div class="col-sm-12" style="padding-left:0px !important;">
        <div class="col-sm-3" style="padding-left:0px !important;">
            <input type="text" asp-for="@Model.Data.MatureAnimalCount" class="form-control col-sm-6" />
        </div>
        <div class="col-sm-3">
            <input type="text" asp-for="@Model.Data.MatureAnimalAverage" class="form-control col-sm-6" />
        </div>
        <div class="col-sm-1" style="padding-top:5px;padding-left:0px;">&nbsp;lbs&nbsp;</div><!--Need to add validation-->
        <div class="col-sm-5">
            <select class="form-control" asp-for="@Model.Data.SelectMatureAnimalDailyFeed" asp-items="@(new SelectList(Model.Data.SelectDailyFeedOptions,"Id","Name"))">
            </select>
        </div>
    </div>
</div>
<div class="form-group col-sm-12" id="GrowingValue" style="display:@displaySeasonal">
    <label class="form-box-heading">Growing Animals</label>
    <div class="col-sm-12" style="padding-left:0px !important;">
        <label asp-for="@Model.Data.GrowingAnimalCount" class="col-sm-3" style="padding-left:0px !important;">Number of mature animals</label>
        <label asp-for="@Model.Data.GrowingAnimalAverage" class="col-sm-4">Average weight</label>
        <label asp-for="@Model.Data.SelectGrowingAnimalDailyFeed" class="col-sm-5">
            Daily Feed Requirements
            <a href="#" data-toggle="tooltip" title="@Model.Data.DailyFeedWarning">
                <span class="glyphicon glyphicon-info-sign" aria-hidden="true" title="Daily Feed Requirement" style="font-size:20px; padding-top:5px"></span>
            </a>
            @*<span class="text-danger">@Html.Raw(@Model.Data.DailyFeedWarning)</span>*@
        </label>
    </div>
    <div class="col-sm-12" style="padding-left:0px !important;">
        <div class="col-sm-3" style="padding-left:0px !important;">
            <input type="text" asp-for="@Model.Data.GrowingAnimalCount" class="form-control col-sm-6" />
        </div>
        <div class="col-sm-3">
            <input type="text" asp-for="@Model.Data.GrowingAnimalAverage" class="form-control col-sm-6" />
        </div>
        <div class="col-sm-1" style="padding-top:5px;padding-left:0px;">&nbsp;lbs&nbsp;</div><!--Need to add validation-->
        <div class="col-sm-5">
            <select class="form-control" asp-for="@Model.Data.SelectGrowingAnimalDailyFeed" asp-items="@(new SelectList(Model.Data.SelectDailyFeedOptions,"Id","Name"))">
            </select>
        </div>
    </div>
</div>

<div class="modal-footer" style="border-top:none !important;">
    <button class="btn" type="button" data-dismiss="modal">Cancel</button>
    <input class="btn btn-primary" type="submit" value="Save" data-save="razor-page-modal" />
</div>
@Html.HiddenFor(x => x.Data.Id)